{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    // suppress errors for missing 'import React' in files
    "react/react-in-jsx-scope": "off"
    // allow jsx syntax in js files (for next.js project)
  }
}